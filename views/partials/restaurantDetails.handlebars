

<div class="bg-white rounded-lg shadow-md p-4 m-4">
    <h2 class="text-2xl font-semibold mb-2">{{restaurantName}}</h2>
    <p class="text-gray-600 mb-2">{{restaurantDescription}}</p>
    <div class="flex items-center justify-between">
        <p class="text-blue-500 font-semibold">{{restaurantCity}}</p>
        <p class="text-gray-500">{{restaurantFoodType}}</p>
    </div>
    <div class="mt-4">
        <p class="text-sm text-gray-500">Horarios para Reservar:</p>
        <ul class="list-disc pl-6">
            {{#each reservationHours}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>