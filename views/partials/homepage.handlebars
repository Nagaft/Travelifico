 <!-- views/partials/homepage.handlebars -->

<div class="bg-white rounded-lg shadow-md p-4 m-4">
    <h1 class="text-3xl font-semibold mb-4">TRAVELIFICO APPLICATION</h1>

    <!-- Select City -->
    <div class="mb-4">
        <label for="city" class="block text-lg font-medium mb-2">Select a City:</label>
        <select id="city" name="city" class="border rounded-md py-2 px-3 w-full">
            <!-- Populate options dynamically based on data -->
            {{#each cities}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>

    <!-- Select Travel Date -->
    <div class="mb-4">
        <label for="travelDate" class="block text-lg font-medium mb-2">Select a Travel Date:</label>
        <input type="date" id="travelDate" name="travelDate" class="border rounded-md py-2 px-3 w-full">
    </div>

    <!-- Select Number of Persons -->
    <div class="mb-4">
        <label for="numPersons" class="block text-lg font-medium mb-2">Select Number of Persons:</label>
        <input type="number" id="numPersons" name="numPersons" min="1" class="border rounded-md py-2 px-3 w-full">
    </div>

    <!-- Select Favorite Food -->
    <div class="mb-4">
        <label for="favoriteFood" class="block text-lg font-medium mb-2">Select Favorite Food:</label>
        <select id="favoriteFood" name="favoriteFood" class="border rounded-md py-2 px-3 w-full">
            <!-- Populate options dynamically based on data -->
            {{#each foodTypes}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>

    <!-- Search Button -->
    <button id="searchBtn" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300 w-full">Search</button>
</div>
